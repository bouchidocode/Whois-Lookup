<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website Response Viewer</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        #response { white-space: pre-wrap; }
    </style>
</head>
<body>
    <h1>Fetch and Display Website Response</h1>
    <input type="text" id="websiteUrl" placeholder="Enter website URL" />
    <button onclick="fetchResponse()">Fetch Response</button>
    <h2>Response:</h2>
    <div id="response"></div>

    <script>
        function fetchResponse() {
            const url = document.getElementById('websiteUrl').value;
            fetch(url)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('response').textContent = data;
                })
                .catch(error => {
                    document.getElementById('response').textContent = 'Error fetching data: ' + error;
                });
        }
    </script>
</body>
</html>
